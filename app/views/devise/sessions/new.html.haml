%body
  .single-container
    %header.single-header
      %h1
        = link_to root_path, class: "single-header" do
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2960600120"
    %main.single-main
      .login-panel
        .login-no-account
          %p アカウントをお持ちでない方はこちら
          = link_to users_path , class: "l-login-no-account" do
            新規会員登録
        .login-form-inner
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            %i.fab.fa-facebook
            Facebookでログイン
          %button#google-login.btn-default.btn-sns.btn-sns-google
            %i.fab.fa-google-plus-square
            Googleでログイン
        .login-form-inner1
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .field
              = f.email_field :email, autofocus: true, placeholder: "メールアドレス"
            .field
              = f.password_field :password, autocomplete: "off", placeholder: "パスワード"
            .form-group
              .g-recaptcha{"data-callback" => "validateRecaptcha","data-sitekey" =>  "6LfxvHgUAAAAABvjT3CdoXb371mPnvTXFdVie8a4"}
            .actions
              = f.submit "ログイン", class: "recaptcha", disabled: "disabled"
            .password-forgot
              - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
                = link_to "パスワードをお忘れの方", new_password_path(resource_name)
    %footer.single-footer
      %nav
        %ul.clearfix
          %li
            %a{:href => "https://www.mercari.com/jp/privacy/"} プライバシーポリシー
          %li
            %a{:href => "https://www.mercari.com/jp/tos/"} メルカリ利用規約
          %li
            %a{:href => "https://www.mercari.com/jp/tokutei/"} 特定商取引に関する表記
      = link_to root_path, class: "single-footer-logo" do
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2960600120"
      %p
        %small © 2018 Mercari
